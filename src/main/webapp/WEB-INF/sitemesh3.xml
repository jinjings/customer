<?xml version="1.0" encoding="UTF-8"?>
<sitemesh>
	<mime-type>text/html</mime-type>
	<mapping decorator="/WEB-INF/views/layouts/main.jsp"/>
    <!-- 指明满足“/*”的页面，将被“/WEB-INF/views/decorators/decorator.html”所装饰 -->
    <mapping path="/*" decorator="/WEB-INF/views/layouts/main.jsp" exclude="false"/>
    <!-- 指明满足“/exclude.jsp*”的页面，将被排除，不被装饰 -->
    <mapping path="/login" exclue="true" />
    <mapping path="/wxCard/gotoGetCard" exclue="true" />
    <mapping path="/wxCard/gotoCardUse" exclue="true" />
    <mapping path="/core" exclue="true" />
    <mapping path="/getUserInfo" exclue="true" />
    <mapping path="/getOAuth2UserInfo" exclue="true" />
    <mapping path="/getOpenid" exclue="true" />
    
    <mapping path="/index" exclue="true" />
</sitemesh>